        <feDistantLight azimuth="45" elevation="60" />
      </feDiffuseLighting>
      <feComposite in2="SourceGraphic" operator="in" />
    </filter>
  </defs>
  <circle cx="100" cy="100" r="80" fill="url(#moonGradient)" filter="url(#moonTexture)" />
</svg>
