<div class="flex flex-col items-center my-8">
    {% form 'contact' %}
        <div class="max-w-6xl mx-auto justify-center flex items-center px-4">
            <div class="flex px-1 mb-3">
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_name">Name</label>
                    <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="text" name="contact[name]" id="contact_name">
                </div>
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_email">Email address</label>
                    <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="email" name="contact[email]" id="contact_email">
                </div>
            </div>
        </div>

        <label class="uppercase text-xs text-gray-500 font-medium" for="contact_message">Message</label>
        <textarea class="border py-3 mb-3 text-gray-700 w-full" name="contact[body]" id="contact_message"></textarea>

        <input class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit" value="Submit message">
    {% endform %}
</div>

{% schema %}
{
    "name": "Contact Form",
    "settings": [
        {
            "type": "text",
            "id": "form_heading",
            "label": "Form Heading",
            "default": "Contact Us"
        },
        {
            "type": "textarea",
            "id": "form_subheading",
            "label": "Form Subheading",
            "default": "Please fill out the form below and we will get back to you as soon as possible."
        }
    ],
    "presets": [
        {
            "name": "Contact Form",
            "category": "Forms"
        }
    ]
}
{% endschema %}
